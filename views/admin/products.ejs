<%- include('../includes/header.ejs') %>

<body>
  <%- include('../includes/headbody.ejs') %>


  <div style="margin-top: 100px;">
    <div class="container">
    <%
        if(prods.length > 0)
        {
         
    %>
      <table class="table text-center">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Images</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <%
            prods.forEach((product, index)=>{
          %>
            <tr>
              <th scope="row"><%- index + 1;%></th>
              <td><%- product.title;%></td>
              <td><img src="/images/<%- product.imageUrl;%>" alt="" style="height: 100px;"></td>
              <td><%- product.price;%></td>
              <td>
                <div class="form-group">
                  <a href="/admin/editproduct/<%- product.id; %>" class="btn btn-outline-primary" style="width: 80px;">Update</a>
                </div>
                <div class="form-group">
                    <input type="hidden" name="id" value="<%- product.id; %>">
                    <input type="hidden" name="_csrf" value="<%- csrfToken; %>">
                    <button class="btn btn-outline-danger" style="width: 80px;" type="button" onclick="deleteProduct(this)">Delete</button>
                </div>
              </td>
            </tr>          
          <%
            })
          %>
          </tbody>
        </table>
        <%
          }
          else
          {
        %>
            <div class="col-md-12 text-center">
              <div class="alert alert-danger">No Product</div>
          </div>
      <%
        }
      %>

    </div>  
</div>
<%- include('../includes/footer.ejs');%>
<script src="/js/admin.js"></script>
</body>

</html>