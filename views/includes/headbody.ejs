<header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link <%- path === '/' ? 'active' : '' %>" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%- path === '/product-list' ? 'active' : '' %>" href="/product-list">Products <span class="sr-only">(current)</span></a>
                    </li>
            
                <%
                    if(isAuthenticated)
                    {
                %>
                    <li class="nav-item">
                        <a class="nav-link <%- path === '/cart' ? 'active' : '' %>" href="/cart">Carts <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%- path === '/orders' ? 'active' : '' %>" href="/orders">Orthers <span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link  <%- path === '/admin/addproduct' ? 'active' : '' %>" href="/admin/addproduct">Add Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  <%- path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin</a>
                    </li>
                <%
                }
                %>
                </ul>
                <%
                    if(!isAuthenticated)
                    {
                %>
                <div class="mt-2 mt-md-0">
                    <a class="btn btn-outline-success my-2 my-sm-0" href="/login">Login</a>
                </div>
                &nbsp;
                <div class="mt-2 mt-md-0">
                    <a class="btn btn-outline-primary my-2 my-sm-0" href="/signup">Register</a>
                </div>
                <%
                    }
                    else
                    {
                %>
                &nbsp;
                <div class="mt-2 mt-md-0">
                    <form action="/logout" method="POST">
                        <input type="hidden" value="<%- csrfToken%>" name="_csrf">
                        <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Logout</button>
                    </form>
                </div>
                <%
                    }
                %>
            </div>
        </nav>
    </header>